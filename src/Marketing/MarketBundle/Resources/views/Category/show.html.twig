{% extends 'MarketingMarketBundle::base.html.twig' %}
{% block title %}{{ category.title }}{% endblock %}

{% block navigation %}
    <nav>
        <ul class="navigation">
            <a href="{{ path('MarketingMarketBundle_homepage') }}"><li>Homepage</li></a> <span>»</span>
            <li>{{ category.title }}</li>
        </ul>
    </nav>
{% endblock %}

{% block body %}
    <div class="row element_header">
        <div class="col-xs-12">
            <h2>Category: <a href="#" rel='nofollow'>{{ category.title }}</a></h2>
            <p>
                {{ category.description }}
            </p>
        </div>
    </div>
    <div class="row">
    {% if no_products != "" %}
        <div class="col-xs-12 categories-wrapper">
            <h2>{{ no_products }}</h2>
        </div>
    {% endif %}

    {% for product in products %}
        <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3 categories-wrapper">
            <h3>Product:
                <a href="{{ path('MarketingMarketBundle_product_show', { 'category':category.title, 'id': product.id}) }}">
                    {{ product.title }}
                </a></h3>
            <h2 class="price">Price: <span>{{ product.price }}$</span></h2>
            <p>{{ product.description | truncate(350) }}</p>
            <p>
                <a class="btn btn-default" role="button" href="{{ path('MarketingMarketBundle_product_show', { 'category':category.title, 'id': product.id}) }}">View details »</a>
            </p>
        </div>
    {% endfor %}

